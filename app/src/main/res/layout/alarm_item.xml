<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="155dp">

    <TextView
        android:id="@+id/alarm_name"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="0dp"
        android:text="Alarm Name Output"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alarm_desc"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_name"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="0dp"
        android:text="Alarm Description Output"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date_out"
        android:layout_width="343dp"
        android:layout_height="36dp"
        android:layout_below="@+id/date_label"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Date Output" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_name"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Date"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:layout_below="@+id/alarm_name"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@+id/alarm_name"
        android:layout_toRightOf="@+id/alarm_name"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</RelativeLayout>